
@model List<UserApp.AppCore.DTOs.UserDTO.UserDTO>
@{
    int sira = 1;
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "User", FormMethod.Get))
{
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Users</h4>
                <a href="/User/AddUser/" class="btn btn-outline-info float-md-right">New User</a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Photo</th>
                                <th>Name</th>
                                <th>Surname</th>
                                <th>Email Address</th>
                                <th>Phone Number</th>
                                <th>Delete</th>
                                <th>Update</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@sira</td>
                                    <td><img src="@Url.Content(item.ImageURL)" alt="Image"></td>
                                    <td>@item.Name</td>
                                    <td>@item.Surname</td>
                                    <td>@item.Email</td>
                                    <td>@item.PhoneNumber</td>
                                    <td><a href="/User/DeleteUser/@item.Id" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/User/UpdateUser/@item.Id" class="btn btn-outline-success">Update</a></td>
                                </tr>

                                sira++;
                            }

                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </div>
}

